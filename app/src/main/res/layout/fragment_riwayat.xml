<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6B5B8">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="633dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Riwayat Rekening"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="138dp"
        app:srcCompat="@drawable/riwayat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="322dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="247dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="574dp"
            android:stretchColumns="3">

            <TableRow android:background="#22ff">

                <TextView
                    android:layout_width="180dp"
                    android:layout_column="1"
                    android:padding="2dip"
                    android:text="Tanggal" />

                <TextView
                    android:padding="3dip"
                    android:text="Jenis Transaksi" />


                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Saldo" />
            </TableRow>

            <TableRow android:background="#22ff">


                <TextView
                    android:layout_width="180dp"
                    android:layout_column="1"
                    android:padding="2dip"
                    android:text="28-09-2021" />

                <TextView
                    android:padding="3dip"
                    android:text="Setor Tunai" />


                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Rp. 250.000" />
            </TableRow>

            <TableRow android:background="#22ff">


                <TextView
                    android:layout_width="180dp"
                    android:layout_column="1"
                    android:padding="2dip"
                    android:text="30-09-2021" />

                <TextView
                    android:padding="3dip"
                    android:text="Tarik Tunai" />


                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Rp. 150.000" />
            </TableRow>

            <TableRow android:background="#22ff">


                <TextView
                    android:layout_width="180dp"
                    android:layout_column="1"
                    android:padding="2dip"
                    android:text="02-10-2021" />

                <TextView
                    android:padding="3dip"
                    android:text="Setor Tunai" />


                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Rp. 1.050.000" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow android:background="#ffff00">

                <TextView
                    android:padding="3dip"
                    android:text="" />

                <TextView
                    android:padding="3dip"
                    android:text="Saldo Akhir" />
                <TextView
                    android:padding="3dip"
                    android:text=" " />


                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Rp. 1.050.000" />
            </TableRow>



            <View
                android:layout_height="2dip"
                android:background="#FF909090" />


        </TableLayout>

    </LinearLayout>

</RelativeLayout>
